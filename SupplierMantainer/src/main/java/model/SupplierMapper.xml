<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="model.SupplierMapper">

	<resultMap id="result" type="Supplier">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="address" column="address" />
		<result property="phone" column="phone" />
		<result property="email" column="email" />
	</resultMap>



	<select id="getAll" resultMap="result">
		SELECT * FROM SUPPLIER ORDER BY id LIMIT 1000 OFFSET 0
	</select>

	<select id="getById" parameterType="long" resultMap="result">
		SELECT * FROM
		SUPPLIER WHERE id = #{id}
	</select>

	<delete id="deleteById" parameterType="int">
		DELETE from SUPPLIER WHERE
		id = #{id};
	</delete>
	
	
	<insert id="insert" useGeneratedKeys="true" parameterType="Supplier">
           <selectKey keyProperty="id" resultType="Long" order="BEFORE">
               select NEXTVAL('supplier_id_seq')
           </selectKey>
           INSERT INTO SUPPLIER (id,name, phone, email, address )
		VALUES (#{id},#{name}, #{phone}, #{email}, #{address});
   </insert>

	<update id="update" parameterType="Supplier">
		UPDATE SUPPLIER
		SET
		address =
		#{address},
		email = #{email},
		name = #{name},
		phone = #{phone}
		WHERE id =
		#{id};
	</update>

</mapper>